<%- include('../partials/html-head') %>
<link rel="stylesheet" href="public/stylesheets/flights/index.css">
<%- include('../partials/nav') %>

<main>
    <h1>Flight List</h1>
    <table>
    <thead>
    <tr>
        <th>Delete</th>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Depart</th>
    </tr>
</thead>
<tbody>
    <%# Oh hey, this is an ejs comment! It starts with a # %>
    <% flights.forEach(flight => {%>
    <tr>
        <td><form 
                action="/flights/<%= flight._id %>?_method=Delete"
                class="delete-form"
                method="POST"
            ><button type="submit">X</button>
        </form></td>
        <td><a href="/flights/<%= flight._id %>"><%= flight.airline %></a></td>
        <td><a href="/flights/<%= flight._id %>"><%= flight.airport %></a></td>
        <td><a href="/flights/<%= flight._id %>"><%= flight.flightNo %></a></td>
        <td><a href="/flights/<%= flight._id %>"><%= flight.depart %></a></td>
    </tr>
    <% }) %>
</tbody>
</table>
</main>

<%- include('../partials/footer') %>